<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/background_player_controller"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_prev"
            style="@style/UizaMediaButton.Previous"
            android:tint="@android:color/white"
            android:tintMode="src_in" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_rew"
            style="@style/UizaMediaButton.Rewind"
            android:tint="@android:color/white"
            android:tintMode="src_in" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_shuffle"
            style="@style/UizaMediaButton.Shuffle"
            android:tint="@android:color/white"
            android:tintMode="src_in" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_repeat_toggle"
            style="@style/UizaMediaButton"
            android:tint="@android:color/white"
            android:tintMode="src_in" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_play"
            style="@style/UizaMediaButton.Play"
            android:tint="@android:color/white"
            android:tintMode="src_in" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_pause"
            style="@style/UizaMediaButton.Pause"
            android:tint="@android:color/white"
            android:tintMode="src_in" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_ffwd"
            style="@style/UizaMediaButton.FastForward"
            android:tint="@android:color/white"
            android:tintMode="src_in" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_next"
            style="@style/UizaMediaButton.Next"
            android:tint="@android:color/white"
            android:tintMode="src_in" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_vr"
            style="@style/ExoMediaButton.VR"
            android:tint="@android:color/white"
            android:tintMode="src_in" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <io.uiza.player.widgets.UizaTextView
            android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="#ff323232"
            android:textSize="14sp"
            android:textStyle="bold" />

        <io.uiza.player.widgets.PreviewTimeBar
            android:id="@id/exo_progress"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            app:played_color="@android:color/holo_blue_dark"
            app:unplayed_color="@color/uiza_gray" />

        <io.uiza.player.widgets.UizaTextView
            android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="#ff323232"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

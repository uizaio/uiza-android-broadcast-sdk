<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/background_player_controller"
    android:elevation="4dp"
    android:layoutDirection="ltr">

    <LinearLayout
        android:id="@id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_back_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_keyboard_arrow_left_white_24" />

        <io.uiza.player.widgets.UizaTextView
            android:id="@id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_picture_in_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_picture_in_picture_alt_white_24" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_directions_run_white_24" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_volume_up_white_24" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/exo_fullscreen_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_fullscreen_white_24" />
    </LinearLayout>

    <RelativeLayout
        android:id="@id/rl_live_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top">

        <io.uiza.player.widgets.UizaTextView
            android:id="@id/tv_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_live"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_5"
            android:paddingRight="@dimen/padding_5"
            android:text="@string/live"
            android:textColor="@android:color/white" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/iv_live_time"
            android:layout_width="@dimen/w_15"
            android:layout_height="@dimen/w_15"
            android:layout_toStartOf="@id/tv_live_time"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_timer_white_24" />

        <io.uiza.player.widgets.UizaTextView
            android:id="@id/tv_live_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_toStartOf="@id/iv_live_view"
            android:textColor="@android:color/white" />

        <io.uiza.player.widgets.UizaImageButton
            android:id="@id/iv_live_view"
            android:layout_width="@dimen/w_15"
            android:layout_height="@dimen/w_15"
            android:layout_toStartOf="@id/tv_live_view"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_visibility_white_24" />

        <io.uiza.player.widgets.UizaTextView
            android:id="@id/tv_live_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@id/rl_time_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5">

            <FrameLayout
                android:id="@id/preview_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/video_frame">

                <ImageView
                    android:id="@id/image_view_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <io.uiza.player.widgets.UizaTextView
                android:id="@id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/preview_frame_layout"
                android:layout_marginStart="@dimen/margin_5"
                android:includeFontPadding="false"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <io.uiza.player.widgets.UizaTextView
                android:id="@id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/preview_frame_layout"
                android:layout_alignParentEnd="true"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/margin_5"
                android:includeFontPadding="false"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <io.uiza.player.widgets.PreviewTimeBar
                android:id="@id/exo_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exo_duration"
                app:ad_marker_color="@color/uiza_yellow_light"
                app:buffered_color="@color/uiza_grey_light"
                app:played_ad_marker_color="@color/uiza_yellow_light"
                app:played_color="@android:color/holo_blue_dark"
                app:previewFrameLayout="@id/preview_frame_layout"
                app:scrubber_color="@android:color/white"
                app:unplayed_color="@color/uiza_gray" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <io.uiza.player.widgets.UizaImageButton
                android:id="@id/exo_play"
                style="@style/UizaMediaButton.Play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerInside" />

            <io.uiza.player.widgets.UizaImageButton
                android:id="@id/exo_pause"
                style="@style/UizaMediaButton.Pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerInside" />


            <io.uiza.player.widgets.UizaImageButton
                android:id="@id/exo_replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_replay_white_24" />

            <io.uiza.player.widgets.UizaImageButton
                android:id="@id/exo_rew"
                style="@style/UizaMediaButton.Rewind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerInside" />

            <io.uiza.player.widgets.UizaImageButton
                android:id="@id/exo_ffwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_forward_10_white_24" />

            <io.uiza.player.widgets.UizaImageButton
                android:id="@id/exo_prev"
                style="@style/UizaMediaButton.Previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerInside" />

            <io.uiza.player.widgets.UizaImageButton
                android:id="@id/exo_next"
                style="@style/UizaMediaButton.Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerInside" />

            <io.uiza.player.widgets.UizaImageButton
                android:id="@id/exo_playlist_folder"
                style="@style/UizaMediaButton.Playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerInside" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/w_1"
                android:layout_weight="1" />

            <io.uiza.player.widgets.UizaImageButton
                android:id="@id/exo_subtitles"
                style="@style/UizaMediaButton.Subtitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerInside" />

            <io.uiza.player.widgets.UizaImageButton
                android:id="@id/exo_hearing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_audiotrack_white_24" />

            <io.uiza.player.widgets.UizaImageButton
                android:id="@id/exo_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_high_quality_white_24" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@id/rl_end_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <io.uiza.player.widgets.UizaTextView
            android:id="@id/tv_end_screen_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</RelativeLayout>
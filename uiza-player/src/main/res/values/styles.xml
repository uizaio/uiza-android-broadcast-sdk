<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UizaMediaButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">@dimen/exo_media_button_width</item>
        <item name="android:layout_height">@dimen/exo_media_button_height</item>
    </style>

    <style name="UizaMediaButton.FastForward">
        <item name="android:src">@drawable/exo_controls_fastforward</item>
        <item name="android:contentDescription">@string/exo_controls_fastforward_description</item>
    </style>

    <style name="UizaMediaButton.Next">
        <item name="android:src">@drawable/ic_skip_next_white_24</item>
        <item name="android:contentDescription">@string/exo_controls_next_description</item>
    </style>

    <style name="UizaMediaButton.Playlist">
        <item name="android:src">@drawable/ic_playlist_play_white_24</item>
        <item name="android:contentDescription">@string/exo_controls_next_description</item>
    </style>

    <style name="UizaMediaButton.Subtitles">
        <item name="android:src">@drawable/ic_closed_caption_white_24</item>
        <item name="android:contentDescription">@string/exo_controls_subtitles_description</item>
    </style>

    <style name="UizaMediaButton.Pause">
        <item name="android:src">@drawable/ic_pause_circle_outline_white_24</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>

    <style name="UizaMediaButton.Play">
        <item name="android:src">@drawable/ic_play_circle_outline_white_24</item>
        <item name="android:contentDescription">@string/exo_controls_play_description</item>
    </style>

    <style name="UizaMediaButton.Previous">
        <item name="android:src">@drawable/ic_skip_previous_white_24</item>
        <item name="android:contentDescription">@string/exo_controls_previous_description</item>
    </style>

    <style name="UizaMediaButton.Rewind">
        <item name="android:src">@drawable/exo_controls_rewind</item>
        <item name="android:contentDescription">@string/exo_controls_rewind_description</item>
    </style>

    <style name="UizaMediaButton.Shuffle">
        <item name="android:src">@drawable/ic_shuffle_white_24</item>
        <item name="android:contentDescription">@string/exo_controls_shuffle_on_description</item>
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="PlayerTheme.Spherical">
        <item name="surface_type">spherical_view</item>
    </style>

    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>
</resources>